@model List<TradeHubApp.Models.PrivateMessage>
@{
    ViewData["Title"] = "Messages";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>@ViewData["Title"]</h2>
            
            <ul class="list-group">
                @foreach(var message in Model)
                {
                    <li class="list-group-item">
                        <strong>@message.Sender.UserName:</strong>
                        @message.Content
                        <div class="text-muted">@message.Timestamp.ToString("g")</div>
                    </li>
                }
            </ul>
            
            <form asp-action="Send" method="post" class="mt-3">
                <input type="hidden" name="receiverId" value="@ViewBag.ReceiverId" />
                <div class="form-group">
                    <textarea name="content" placeholder="Type your message" class="form-control" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
    </div>
</div>